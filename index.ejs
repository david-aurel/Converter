<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./styles.css">
    <title>Converter</title>
</head>
<body>
    <div class="container">
        <div class="content">
            <h2>Europe-US converter <i class="fas fa-calculator"></i> </h2>
        
            <!-- km & miles  -->
            <table>
                <tr>
                    <td>
                        <input id="km" type="text">
                        <p>km</p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input id="miles" type="text">
                        <p>miles</p>
                    </td>
                </tr>
            </table>

            <!-- liter & cups  -->
            <table>
                <tr>
                    <td>
                        <input id="liter" type="text">
                        <p>liter</p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input id="cups" type="text">
                        <p>cups</p>
                    </td>
                </tr>
            </table>

            <!-- celsius & fahrenheit  -->
            <table>
                <tr>
                    <td>
                        <input id="celsius" type="text">
                        <p>˚C</p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input id="fahrenheit" type="text">
                        <p>˚F</p>
                    </td>
                </tr>
            </table>

            <!-- euro & dollar  -->
            <table>
                <tr>
                    <td>
                        <input id="euro" type="text">
                        <p>€</p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input id="dollar" type="text">
                        <p>$</p>
                    </td>
                </tr>
            </table>
        </div>
    </div>


    <script src="/public/script.js"></script>
    <script src="https://kit.fontawesome.com/effa1431ca.js" crossorigin="anonymous"></script>
</body>
</html>